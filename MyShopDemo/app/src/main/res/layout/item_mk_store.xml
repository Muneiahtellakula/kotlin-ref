<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView android:id="@+id/imgProduct"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ratail"
            android:scaleType="centerCrop"/>
    <TextView android:id="@+id/txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgProduct"
            android:layout_marginLeft="10dp"
            android:text="Name"/>
    <TextView android:id="@+id/txtProductDes"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/txtProductName"
              android:layout_below="@+id/txtProductName"
            android:text="Description"/>
    <TextView android:id="@+id/txtProductPrice"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/txtProductName"
              android:layout_below="@+id/txtProductDes"
              android:textSize="18sp"
            android:text="Price"/>
    <Button android:id="@+id/btnAddRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="Add"/>

</RelativeLayout>